@model SignInInput
@{
    ViewBag.Title = "Reach后台登录";
}


<div class="container">

    <div class="row" style="margin-top:10px">
        <div class="col-xs-12 text-center">
            <h1 class="text-primary"><strong>Reach后台登录</strong></h1>
        </div>
    </div>
    <div class="row" style="margin-top:40px">
        <div class="col-xs-12">
            @using (Html.BeginForm("Login", "Admin", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @role = "form " }))
            {
                @Html.AntiForgeryToken()
                <div class="col-xs-4 col-xs-offset-5">

                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.UserName, new { @class = "col-xs-1 col-xs-offset-4 control-label" })
                    <div class="col-xs-3 ">
                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control " })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.Password, new { @class = "col-xs-1 col-xs-offset-4 control-label" })
                    <div class="col-xs-3 ">
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control " })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-2  col-xs-offset-5 ">
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(x => x.RememberMe)
                                @Html.LabelFor(x => x.RememberMe)
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group ">
                    <div class="col-xs-2  col-xs-offset-5 ">
                        <button type="submit" class=" btn btn-group-justified btn-primary">登录</button>
                    </div>
                    <div class="col-xs-3  ">
                        @Html.ValidationSummary()
                    </div>


                </div>

            }
        </div>
    </div>

</div>