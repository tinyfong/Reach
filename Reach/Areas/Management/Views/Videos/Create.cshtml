@model YoukuVideoInput
@{
    ViewBag.Title = "创建视频";
}


@using (Html.BeginForm("CreateUser", "Config", FormMethod.Post, new { @class = "form-horizontal", @role = "form", @autocomplete = "off" }))
{
    @Html.ValidationSummary()
    @Html.HiddenFor(x => x.Id)

    <div class="form-group">
        @Html.LabelFor(x => x.Name, new { @class = "col-xs-2 control-label" })
        <div class="col-xs-10">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control " })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Customer, new { @class = "col-xs-2 control-label" })
        <div class="col-xs-10">
            @Html.PasswordFor(x => x.Customer, new { @class = "form-control " })
        </div>
    </div>

    <div class="form-group text-center">
        <button type="submit" class=" btn btn-primary">保存</button>
    </div>

    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <button type="button" class="btn btn-default"
                    data-dismiss="modal">
                Cancel
            </button>
            <button type="submit" id="approve-btn"
                    class="btn btn-danger">
                Save
            </button>
        </div>
    </div>
}


<script type="text/javascript">
    $(function () {
        $('#approve-btn').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>






